<!--
Renderer for displaying legend class data in a list.

@author Peter Verweij
@author Rob Knapen
-->
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml"
         horizontalScrollPolicy="off"
         verticalScrollPolicy="off"
         verticalGap="0"
         horizontalGap="5" verticalAlign="middle" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0">

    <mx:Canvas width="25" height="16"
               borderStyle="solid" borderColor="#333333"
               id="colourCanvas"
               backgroundColor="{data.colour}">
    </mx:Canvas>
    <mx:Label text="{data.caption}" id="captionLabel"/>
</mx:HBox>
